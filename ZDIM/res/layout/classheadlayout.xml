<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/topBackIV"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:src="@drawable/head_2"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <zhwx.common.view.CircleImageViewWithWhite
            android:id="@+id/headImgIV"
            android:layout_width="@dimen/LargeAvatarSize"
            android:layout_height="@dimen/LargeAvatarSize"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/defult_classhead" 
            />

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/topBackIV"
            android:layout_alignRight="@+id/headImgIV"
            android:text="花千骨"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textStyle="bold"
            android:layout_marginRight="105dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

</RelativeLayout>