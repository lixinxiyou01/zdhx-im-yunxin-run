<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/nameLay"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_bg"
            android:textSize="16sp"
            android:text="姓名" />

        <TextView
            android:id="@+id/timeLongTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="{timeLong}" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/shangLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/shangIV"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_shang" />

                <TextView
                    android:id="@+id/shangTimeTV"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="上班时间"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/shangAddressTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_location_grey"
                    android:text="{地点}"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_content" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/xiaLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                android:id="@+id/xiaRefreshTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/icon_refresh"
                android:gravity="center"
                android:text="更新考勤"
                android:textColor="#56abe4"
                android:textSize="12sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/xiaIV"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_xia" />

                <TextView
                    android:id="@+id/xiaTimeTV"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="下班时间"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/xiaAddressTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_location_grey"
                    android:text="{地点}"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
