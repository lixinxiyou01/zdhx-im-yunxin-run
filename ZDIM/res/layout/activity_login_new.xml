<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLay"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/login_contener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        tools:ignore="HardcodedText,ContentDescription" >

        <zhwx.common.view.CircleImageViewWithWhite
            android:id="@+id/headImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo" />

        <LinearLayout
            android:id="@+id/login_messageLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="#f8f8f8"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/icon_school" />

                <Spinner
                    android:id="@+id/organizationSp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/nw" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
				android:layout_marginLeft="18dp" 
				android:layout_marginRight="18dp"                
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/loginNameLay"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp" >

                <ImageView
                    android:id="@+id/iv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/icon_username" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/iv_username"
                    android:background="@color/transparent"
                    android:hint="请输入用户名"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/password"
                    android:textColor="@color/dark_gray"
                    android:singleLine="true"
                    android:layout_marginRight="18dp"
                    android:textSize="18sp" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp" 
				android:layout_marginRight="18dp"  
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp" >

                <ImageView
                    android:id="@+id/iv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/icon_password" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dip"
                    android:layout_toRightOf="@id/iv_password"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:textColor="@color/dark_gray"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:layout_marginRight="18dp"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_btnLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/loginBT"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="20dip"
                android:layout_weight="5"
                android:background="@drawable/btn_login_selecter"
                android:gravity="center"
                android:onClick="onLogin"
                android:paddingBottom="7dp"
                android:paddingTop="5dp"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/activeAccountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="注册账号"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/main_bg"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/resetPswTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:text="忘记密码?"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/main_bg" />
    </RelativeLayout>

</RelativeLayout>