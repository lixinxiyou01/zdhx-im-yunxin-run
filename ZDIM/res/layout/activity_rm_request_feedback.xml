<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:layout_above="@+id/order_btnLay"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/evaluateContener"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/TextView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="是否修好："
                    android:textSize="15sp"/>

                <RadioGroup
                    android:id="@+id/repairStatusRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/TextView16"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/repairedRb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text=" 是"
                        android:button="@drawable/btn_radio_selector"
                        android:textColor="@color/dark_gray"/>

                    <RadioButton
                        android:id="@+id/cantRepairRb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:text=" 否"
                        android:button="@drawable/btn_radio_selector"
                        android:textColor="@color/dark_gray"/>
                </RadioGroup>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <zhwx.common.view.materialratingbar.MaterialRatingBar
                    android:id="@+id/suduRB"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:progressTint="@color/main_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="0.5"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/TextView1"
                    android:layout_toEndOf="@+id/TextView1"/>

                <TextView
                    android:id="@+id/TextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="响应速度："
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <zhwx.common.view.materialratingbar.MaterialRatingBar
                    android:id="@+id/taiduRB"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:progressTint="@color/main_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/TextView2"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:stepSize="0.5"
                    />

                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="服务态度："
                    android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <zhwx.common.view.materialratingbar.MaterialRatingBar
                    android:id="@+id/jishuBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:progressTint="@color/main_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/TextView3"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:stepSize="0.5"
                    />

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="技术水平："
                    android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <zhwx.common.view.materialratingbar.MaterialRatingBar
                    android:id="@+id/zhiliangRB"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:progressTint="@color/main_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/TextView4"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:stepSize="0.5"
                    />

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="维修质量："
                    android:textSize="15sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <zhwx.common.view.materialratingbar.MaterialRatingBar
                    android:id="@+id/allRB"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:progressTint="@color/main_bg_carmanage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/TextView5"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:stepSize="0.5"
                    />

                <TextView
                    android:id="@+id/TextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="整体评价："
                    android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/upLoadimage"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="上传图片:"
                    android:textSize="15sp" />

                <GridView
                    android:id="@+id/feedBackFileGV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/upLoadimage"
                    android:horizontalSpacing="3dp"
                    android:numColumns="3"
                    android:paddingLeft="10dp"
                    android:verticalSpacing="3dp"></GridView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/faultDescriptionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="提出宝贵建议:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/suggestET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/faultDescriptionTV"
                    android:background="@drawable/btn_ordercar_normal"
                    android:gravity="top|left"
                    android:lines="3"
                    android:textColor="@color/greytext"
                    android:textSize="15sp"></EditText>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/order_btnLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@color/main_bg_repairs"
            android:gravity="center"
            android:onClick="onSend"
            android:text="提交反馈"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
